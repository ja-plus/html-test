{
  "compilerOptions": {
    "target": "ES2015",
    "module": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["ts"]
}