{
    "compilerOptions": {
      "target": "ES2015",
      "module": "es6",
      "noImplicitAny": true,
      "removeComments": true,
      "moduleResolution": "node",
      "preserveConstEnums": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "experimentalDecorators": true,
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": [
      "src/**/*.ts"
    ]
  }